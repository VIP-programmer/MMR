<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/about_shape"
    android:gravity="center"
    >
    <EditText
        android:id="@+id/titre_note"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/input_shape"
        android:textSize="@dimen/reg_edit_text"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Titre"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="15dp"
        />
    <Spinner
        android:id="@+id/note_priority_add"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_shape"
        android:drawSelectorOnTop="true"
        android:entries="@array/note_type"
        android:padding="12dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/desc_note"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:inputType="text|textMultiLine"
        android:layout_alignParentRight="true"
        android:background="@drawable/about_shape"
        android:hint="description"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:gravity="top"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <android.widget.Button
            android:id="@+id/cancel_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="annuler"
            android:layout_marginTop="10dp"
            android:background="@drawable/active_dot"
            android:backgroundTint="@color/white_dark"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="20dp"/>
        <android.widget.Button
            android:id="@+id/add_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:layout_marginTop="10dp"
            android:background="@drawable/active_dot"
            android:backgroundTint="@color/blue_light"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="20dp"/>
    </LinearLayout>
</LinearLayout>