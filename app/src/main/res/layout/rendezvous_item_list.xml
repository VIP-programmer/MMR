<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white_dark"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:background="@color/blue_mid"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.98"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        >
        <LinearLayout
            android:id="@+id/date_rendez_vous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/rend_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04"
                android:textColor="@color/blue_dark"
                android:fontFamily="@font/lusitana_bold"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/rend_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juin"
                android:textColor="@color/blue_mid"
                android:fontFamily="@font/lusitana_regular"
                android:textSize="18dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/date_rendez_vous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/rend_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visite avec Dr Ahmed Ahmed"
                android:textColor="@color/gray_dark"
                android:fontFamily="@font/lusitana_bold"
                android:textSize="15dp"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/rend_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ã  17:00"
                android:textColor="@color/gray_light"
                android:fontFamily="@font/lusitana_regular"
                android:textSize="16dp"
                android:paddingTop="5dp"
                />

        </LinearLayout>
