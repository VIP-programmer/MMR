<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_note_shape"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="10dp"
    >
    <!--
    day
    hour
    button add
    doctor
    Sujet
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rend_doc_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profileholder"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/rend_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/04/2021"
                    android:textColor="#373737"
                    android:fontFamily="@font/lusitana_regular"
                    android:textSize="9dp"
                    />
                <TextView
                    android:id="@+id/rend_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/lusitana_bold"
                    android:textSize="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avec"
                    />
                <TextView
                    android:id="@+id/rend_avec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D Ahmed Ahmed"
                    android:textColor="#373737"
                    android:fontFamily="@font/lusitana_regular"
                    android:textSize="9dp"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/rend_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="\tThis is the note's body,This is the note's body,This is the note's body,This is the note's body\nThis is the note's body,This is the note's body."
        android:textColor="@android:color/black"
        android:fontFamily="@font/lusitana_regular"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/rend_add_to_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ajouter"
        android:textColor="#a30000"
        android:fontFamily="@font/lusitana_bold"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:layout_gravity="right"
        />
</LinearLayout>