<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".patient.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patient.Home"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <com.rishabhharit.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/layout_bg"
            android:scaleType="fitXY"
            app:cornerRadius="30dp"
            app:roundedCorners="bottomRight|bottomLeft"
            />
        <!--
        <com.rishabhharit.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/layout_bg"
            android:scaleType="centerCrop"
            app:cornerRadius="20dp"
            app:roundedCorners="bottomLeft|bottomRight"
            />
            -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenu"
                android:fontFamily="@font/fredoka"
                android:textSize="30dp"
                android:textColor="@color/gray_dark"

                />
            <TextView
                android:id="@+id/name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAHMAN iliass"
                android:fontFamily="@font/fredoka"
                android:textSize="20dp"
                android:textColor="@color/blue_dark"
                />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profileholder"
            app:civ_border_width="5dp"
            android:layout_alignParentEnd="true"
            app:civ_border_color="@color/blue_dark"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="7"
            >
            <LinearLayout
                android:id="@+id/online_med"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vos medcins en ligne"
                        android:fontFamily="@font/lusitana_bold"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="plus >"
                        android:fontFamily="@font/lusitana_regular"
                        android:textSize="20dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/online_med_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:id="@+id/empty_view_med"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/lusitana_bold"
                    android:text="Pas d'active medcins pour le moment" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/online_med"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vos notes"
                        android:fontFamily="@font/lusitana_bold"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/note_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    />

                <TextView
                    android:id="@+id/empty_view_note"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/lusitana_bold"
                    android:text="Pas d'active medcins pour le moment" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>