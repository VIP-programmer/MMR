<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medic.MedicNoteHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:text="Choisir le patient"
            android:textColor="@color/blue_dark"
            android:fontFamily="@font/fredoka"
            />
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/doc_list_patients"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input_shape"
            android:paddingHorizontal="20dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            />
        <RelativeLayout
            android:id="@+id/see_notes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/icon_prof_med_shape"
            android:backgroundTint="@color/blue_light"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/touch"
                android:scaleType="fitEnd"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultez les notes"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:fontFamily="@font/lusitana_bold"
                android:backgroundTint="@color/white"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/write_note"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/icon_prof_med_shape"
            android:backgroundTint="@color/blue_light"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/edit"
                android:scaleType="fitEnd"
                android:padding="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ecrire une note"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:fontFamily="@font/lusitana_bold"
                android:backgroundTint="@color/white"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>