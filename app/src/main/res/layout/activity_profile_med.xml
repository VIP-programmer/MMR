<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".patient.ProfileMed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/layout_bg"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@drawable/prof_doc_pat_shape"
            android:backgroundTint="@android:color/white"
            android:orientation="vertical"
            android:layout_marginTop="-20dp"
            >
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:translationZ="-500dp"
            >

        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img_doc_pat"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profileholder"
            app:civ_border_color="@color/blank"
            app:civ_border_width="5dp"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.64"
            android:backgroundTint="@android:color/white"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/doc_name"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DAHMAN iliass"
                            android:fontFamily="@font/fredoka"
                            android:textSize="18dp"
                            android:textColor="@android:color/black"
                            />
                        <TextView
                            android:id="@+id/doc_speciality"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medcin general"
                            android:fontFamily="@font/lusitana_bold"
                            android:textSize="14dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/btn_call"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/phone_call"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_prof_med_shape"
                        android:backgroundTint="@color/blue_dark"
                        android:padding="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                    <ImageButton
                        android:id="@+id/btn_chat"
                        android:layout_toStartOf="@+id/btn_call"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/chat"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_prof_med_shape"
                        android:backgroundTint="@color/blue_dark"
                        android:paddingHorizontal="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumé"
                    android:fontFamily="@font/fredoka"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/about"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ResuméResuméResuméResuméResuméResuméResumé\nResuméResuméResumé"
                    android:fontFamily="@font/lusitana_regular"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horaire de travail"
                    android:fontFamily="@font/fredoka"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/working_hours"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed-Sat 08:00-16:00"
                    android:fontFamily="@font/lusitana_regular"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    />

                </LinearLayout>
            </ScrollView>
            </LinearLayout>
    </LinearLayout>
    <android.widget.Button
        android:id="@+id/to_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="voir dans la carte"
        android:background="@drawable/active_dot"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>