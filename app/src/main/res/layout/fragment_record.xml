<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".patient.Home">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_welcome"
            android:paddingHorizontal="30dp"
            android:paddingTop="55dp"
            android:paddingBottom="25dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:fontFamily="@font/fredoka"
                    android:textSize="30dp"
                    android:textColor="@android:color/darker_gray"

                    />
                <TextView
                    android:id="@+id/name"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAHMAN iliass"
                    android:fontFamily="@font/fredoka"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profileholder"
                app:civ_border_width="2dp"
                android:layout_alignParentEnd="true"
                app:civ_border_color="#FF000000"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/online_med"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online medics"
                    android:fontFamily="@font/lusitana_bold"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="more ->"
                    android:fontFamily="@font/lusitana_regular"
                    android:textSize="20dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/online_med_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/online_med"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your notes"
                    android:fontFamily="@font/lusitana_bold"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="more ->"
                    android:fontFamily="@font/lusitana_regular"
                    android:textSize="20dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/note_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>