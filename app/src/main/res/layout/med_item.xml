<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:layout_height="150dp"
    android:background="@android:color/transparent"
    android:layout_marginHorizontal="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_prof_med_shape"
        android:backgroundTint="@color/white_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/med_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profileholder"
            app:civ_border_width="5dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/med_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Ahmed Ahmed"
            android:textSize="14dp"
            android:textColor="@color/gray_dark"
            android:fontFamily="@font/fredoka"
            android:layout_below="@+id/med_item_img"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            />
</RelativeLayout>