<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_note_shape"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="10dp"
    >
<!--
Note:
    Date,
    Med name,
    text (somme of),
    importance,
    Title
-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@android:color/black"
                android:fontFamily="@font/lusitana_bold"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/note_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20/04/2021"
                android:textColor="#373737"
                android:fontFamily="@font/lusitana_regular"
                android:textSize="9dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/note_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Alert"
            android:textColor="#a30000"
            android:fontFamily="@font/fredoka"
            android:textSize="14dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/note_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="\tThis is the note's body,This is the note's body,This is the note's body,This is the note's body\nThis is the note's body,This is the note's body."
        android:textColor="@android:color/black"
        android:fontFamily="@font/lusitana_regular"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/note_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D Ahmed Ahmed"
        android:textColor="#373737"
        android:fontFamily="@font/lusitana_regular"
        android:textSize="9dp"
        />
</LinearLayout>